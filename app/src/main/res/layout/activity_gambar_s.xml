<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s_sapi"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.root.disgraphia.GambarS">


    <com.radefffactory.paint.CanvasView
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/s" />

    <Button
        android:id="@+id/b_clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="135dp"
        android:layout_marginStart="135dp"
        android:background="@drawable/b_reload"
        android:onClick="clearCanvas" />

    <Button
        android:id="@+id/b_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/b_clear"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/b_clear"
        android:layout_toRightOf="@+id/b_clear"
        android:background="@drawable/b_next" />
</android.widget.RelativeLayout>