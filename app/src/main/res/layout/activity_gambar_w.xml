<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w_walet"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.root.disgraphia.GambarW">


    <com.radefffactory.paint.CanvasView
        android:id="@+id/canvas"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="300dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/w" />

    <Button
        android:id="@+id/b_clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/b_next"
        android:layout_toStartOf="@+id/b_next"
        android:background="@drawable/b_reload"
        android:onClick="clearCanvas" />

    <Button
        android:id="@+id/b_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/b_clear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/b_next" />
</android.widget.RelativeLayout>